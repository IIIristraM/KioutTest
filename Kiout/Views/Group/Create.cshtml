@model Kiout.Models.Group

@{
    ViewBag.Title = "Создать новую учебную группу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    @Html.ActionLink("Учебные группы", "Index") > @ViewBag.Title
</div>
<br /><br />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div>
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title, "Необходимо назвать группу")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InstructorId, "Инструктор", new { @class = "control-label" })
            <div>
                @Html.DropDownList("InstructorId")
                @Html.ValidationMessageFor(model => model.InstructorId, "Необходимо выбрать инструктора")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseId, "Курс", new { @class = "control-label" })
            <div>
                @Html.DropDownList("CourseId")
                @Html.ValidationMessageFor(model => model.CourseId, "Необходимо выбрать курс")
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
